{
  "name": "match-iz",
  "browserGlobalName": "matchiz",
  "version": "2.2.0",
  "description": "A tiny pattern-matching library in the style of the TC39 proposal",
  "author": "Conan Theobald",
  "license": "MIT",
  "keywords": [
    "pattern-matching",
    "switch-case",
    "declarative-conditionals",
    "match-when",
    "otherwise"
  ],
  "types": "index.d.ts",
  "main": "./dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "browser": "./dist/browser/match-iz.browser.js",
      "default": "./dist/cjs/index.js"
    },
    "./dates": {
      "import": "./dist/esm/dates/index.js",
      "require": "./dist/cjs/dates/index.js",
      "default": "./dist/cjs/dates/index.js"
    },
    "./dates/utc": {
      "import": "./dist/esm/dates/utc/index.js",
      "require": "./dist/cjs/dates/utc/index.js",
      "default": "./dist/cjs/dates/utc/index.js"
    }
  },
  "files": [
    "dist/**/*.js",
    "dist/**/package.json",
    "CHANGELOG.md",
    "README.md",
    "LICENSE",
    "index.d.ts"
  ],
  "engines": {
    "node": ">=10"
  },
  "homepage": "https://github.com/shuckster/match-iz",
  "repository": {
    "type": "git",
    "url": "https://github.com/shuckster/match-iz"
  },
  "bugs": {
    "url": "https://github.com/shuckster/match-iz/issues",
    "email": "bugs+match-iz@conans.co.uk"
  },
  "scripts": {
    "test": "node ./tests/run.mjs",
    "lint": "pnpx eslint src/*.mjs tests/*.mjs",
    "build": "pnpm run build:esbuild",
    "build:clean": "rimraf dist/; mkdir -p dist/{esm,cjs,browser}; mkdir -p dist/{esm,cjs}/dates/utc",
    "build:all": "pnpm run build:clean ; pnpm run build",
    "build:esbuild": "node ./build-config/esbuild.mjs"
  },
  "devDependencies": {
    "compose-paths": "^1.2.1",
    "esbuild": "^0.14.31",
    "eslint": "^8.12.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.3"
  }
}
